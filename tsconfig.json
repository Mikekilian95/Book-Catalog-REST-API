{
  "compilerOptions": {
    "target": "es2016", // Set the JavaScript language version for emitted code
    "module": "commonjs", // Use CommonJS modules (Node.js compatible)
    "outDir": "./dist", // Specify the output folder for compiled JavaScript files
    "rootDir": "./src", // Specify the root folder for your TypeScript source files
    "baseUrl": "./src", // Base directory for resolving non-relative module imports
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking for declaration files (.d.ts)
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in imports
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src folder
  "exclude": ["node_modules", "dist", "tests"] // Exclude node_modules, dist, and test files
}
