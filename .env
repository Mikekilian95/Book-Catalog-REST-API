
# Environment variables for the Book API
# This file is used as a template or reference for environment variables required to run the API

# Server configuration
NODE_ENV=development
PORT=3000

# Database configuration
DB_PATH=./database.sqlite

# Logging configuration
LOG_LEVEL=info

# JWT (for authentication enhancement)
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=1d

# Rate limiting (for enhancement)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # 100 requests per window











